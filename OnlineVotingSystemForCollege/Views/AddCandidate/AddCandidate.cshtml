            <script>
        $(document).ready(function () {
            $("#Electiontable").DataTable(
                {
                    "ajax": {

                        "url": "/AddCandidate/ListElection",
                        "type": "GET",
                        "datatype": "json"

                    },
                    "columns": [

                        { "data": "ElectionId" },
                        {
                            "data": "ElectionName" },
                        {
                            "data": "ElectionStartDate"
                       
                        },
                        {
                            "data": "ElectionEndDate"
                        },
                     
                        {
                            "data": "ElectionId",
                            "render": function (ElectionId, type, full, meta) {

                                 return '<a href="@Url.Action("Add","AddCandidate")/'+ ElectionId +'" class="btn btn-success" ><i class="fas fa-pencil" aria-hidden="true"></i>Add Candidate </a>'
                            }
                        },
                    ]






                });
        });

 
     
           
