            <script>
        $(document).ready(function () {
            $("#IdVerifyTable").DataTable(
                {
                    "ajax": {

                        "url": "/VerifyUser/IdRequestList",
                        "type": "GET",
                        "datatype": "json"

                    },
                    "columns": [

                        { "data": "IdRequestId" },
                        {
                            "data": "UserId" },
                        {
                            "data": "Email"

                        },
                        {
                            "data": "FullName"
                        },

                        {
                            "data": "UserId",
                            "render": function (UserId, type, full, meta) {

                                return '<a href="@Url.Action("Verify","VerifyUser")/' + UserId + '" class="btn btn-success" ><i class="fas fa-pencil" aria-hidden="true"></i>Verify User </a>'

